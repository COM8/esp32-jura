{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Menuconfig - External",
            "type": "shell",
            "command": "gnome-terminal -- bash -c 'idf.py menuconfig'",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            }
        },
        {
            "label": "Monitor /dev/ttyUSB0 - External",
            "type": "shell",
            "command": "gnome-terminal -- bash -c 'idf.py -p /dev/ttyUSB0 monitor'",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            }
        },
        {
            "label": "Flash /dev/ttyUSB0",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "-p",
                "/dev/ttyUSB0",
                "flash"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            }
        },
        {
            "label": "Full Clean",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "fullclean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/esp32"
            }
        }
    ]
}